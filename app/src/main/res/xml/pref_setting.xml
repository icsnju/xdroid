        <SwitchPreference
            android:defaultValue="false"
            android:key="test_mode"
            android:title="@string/test_mode" />


    </PreferenceCategory>

    <PreferenceCategory android:title="@string/test">

        <Preference
            android:key="broadcast"
            android:title="@string/broadcast" />


    </PreferenceCategory>

    <PreferenceCategory android:title="@string/statistics">
        <Preference
            android:key="crash"
            android:title="@string/crash" />
        <Preference
            android:key="userdata"
            android:title="@string/userdata" />
